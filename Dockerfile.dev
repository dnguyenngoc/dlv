FROM golang:1.21-alpine

# Install build dependencies
RUN apk add --no-cache git make gcc musl-dev

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run in development mode with hot reload
CMD ["go", "run", "./cmd/server/main.go"]

